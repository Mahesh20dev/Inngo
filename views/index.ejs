<% layout("/layouts/boilerplate")%>

<body>
    <!-- <form method="GET" action="/listings/new">
        <button>Create a new listing</button>
    </form> -->
    
    <div id="filters" >
      <div class="filter">
        <a href="/listings">
          <div><i class="fa-solid fa-fire"></i></div>
           <p>Trending</p>
        </a>
      </div>
      <div class="filter">
        <a href="/search?keyword=Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
        </a>
      </div>
       <div class="filter">
        <a href="/search?keyword=Cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
        </a>
      </div>
      <div class="filter">
        <a href="/search?keyword=Mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
        </a>
      </div>
       <div class="filter">
        <a href="/search?keyword=Castles">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
        </a>
      </div>
      <div class="filter">
        <a href="/search?keyword=Pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
        </a>
      </div>
      <div class="filter">
        <a href="/search?keyword=Camping">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
        </a>
      </div>
       <div class="filter">
        <a href="/search?keyword=Farms">
        <div><i  class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
        </a>
      </div>
      <div class="filter">
        <a href="/search?keyword=Artic">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
        </a>
      </div>
        <div class="filter">
        <a href="/search?keyword=Domes">
        <div><i class="fa-solid fa-igloo"></i></a></div>
        <p>Domes</p>
        </a>
      </div>
       <div class="filter">
        <a href="/search?keyword=Boats">
        <div><i  class="fa-solid fa-ship"></i></a></div>
        <p>Boats</p>
        </a>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
      </div>

    </div>


    <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let list of allListings){%>
            <a href="/listings/<%=list._id%>" class="listing-link">
            <div class="card col  listing-card" >
                <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style=" height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=list.title%></b> <br>
                    &#8377;<%=list.price.toLocaleString("en-IN")%> / <i>Day</i>
                    <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
                  </p>
                </div>
              </div>
            </a>
              <%}%>
    </div>
    
   <script src="/js/taxSwitch.js">
   </script>
    
</body>


