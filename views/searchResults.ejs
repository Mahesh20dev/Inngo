<% layout("/layouts/boilerplate")%>
<body>
    <!-- <form method="GET" action="/listings/new">
        <button>Create a new listing</button>
    </form> -->
    
  <div class=" btns ">
            <a href="/listings" class="btn btn-dark  edit-btn mt-2">Back</a>
    </div>


   <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if(results.length >= 1) { %>
    <% for(let result of results) { %>
      <a href="/listings/<%= result._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= result.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= result.title %></b><br>
              &#8377;<%= result.price.toLocaleString("en-IN") %> / night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  <% } else { %>
    <div class="row mt-3">
    <div class="alert alert-danger col-12 offset-11" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <h4 class="alert-heading">No Listing Found </h4>
    </div>
    </div>
  
  <% } %>
</div>

    
   
    
</body>


